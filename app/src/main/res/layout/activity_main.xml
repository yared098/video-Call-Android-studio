<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/basket_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/black"
            app:cardElevation = "16dp"
            android:layout_width = "60dp"
            android:layout_height = "60dp"
            app:cardCornerRadius = "30dp"
            android:layout_margin = "10dp"
            android:foregroundGravity = "center"
            android:layout_centerInParent = "true"

            >
            <!-- simple image view -->
            <ImageView
                android:id="@+id/img"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Travelers"
            android:textAlignment="center"
            android:textColor="#9A9191"
            android:textSize="26sp" />

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#ff00"
            app:cardElevation = "16dp"
            android:layout_width = "60dp"
            android:layout_height = "60dp"
            app:cardCornerRadius = "30dp"
            android:layout_margin = "10dp"
            android:foregroundGravity = "center"
            android:layout_centerInParent = "true"

            >
            <!-- simple image view -->
            <ImageView
                android:id="@+id/imgcall"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_call_end_24" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"

        android:layout_width="413dp"
        android:layout_height="100dp"
        android:bottomRightRadius="18dp"
        app:cardBackgroundColor="#2E3A40"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basket_expand"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="16dp"

                >
                <!-- simple image view -->
                <ImageView
                    android:id="@+id/imgcamera"
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_videocam_off_24" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="16dp">
                <!-- simple image view -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_mic_off_24" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="16dp">
                <!-- simple image view -->
                <ImageView
                    android:id="@+id/imgrotate"
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cameraswitch_24" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="#555252"
                app:cardCornerRadius="30dp"
                app:cardElevation="16dp">
                <!-- simple image view -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_branding_watermark_24" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <GridView
        android:layout_margin="0dp"
        android:gravity="center"
        android:id="@+id/idGVcourses"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basket_expand"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>